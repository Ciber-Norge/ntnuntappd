@using CiBeer.Migrations
@using CiBeer.Models
@model Dictionary<CiBeer.Models.BeerModel, int>
@{
    ViewBag.Title = "CiBeer";
}

<h1>CiBeer</h1>
<div class="beerimage">
    <img src="~/Content/beers.jpg" id="beerimage" />
</div>

<button class="btn btn-success" id="" onclick='window.location = "@Url.Action("Index", "Beer")";'>Check in øl!</button>

<table class="table table-striped" style="margin: 10px;">
    <tr>
        <th>All-time HITS!</th>
        <th>Antall</th>
    </tr>
    @if (Model.Count() > 0)
    {
        foreach (var group in Model)
        {

            var beer = group.Key;
            <tr>
                <td>
                    @Html.DisplayFor(g => group.Key.Name)
                </td>
                <td>
                    @Html.DisplayName(group.Value.ToString())
                </td>
            </tr>

        }
    }

</table>