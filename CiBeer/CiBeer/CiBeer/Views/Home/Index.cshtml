@using CiBeer.Migrations
@using CiBeer.Models
@model Dictionary<CiBeer.Models.BeerModel, int>
@{
    ViewBag.Title = "CiBeer";
}
<div class="row">
    <div class="col-md-12">
        <h1>CiBeer</h1>
        <div class="beerimage">
            <img src="~/Content/beers.jpg" id="beerimage" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">

        <button class="btn btn-success checkinbutton" id="" onclick='window.location = "@Url.Action("Index", "Beer")";'>Check in øl!</button>
    </div>
</div>
<div class="row">
    <div class="col-md-6">

        <table class="table table-striped" id="popularbeers" style="margin: 10px;">
            <thead>
                <tr>
                    <th>All-time HITS!</th>
                    <th>Antall</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    foreach (var group in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(g => group.Key.Name)
                            </td>
                            <td>
                                @Html.DisplayName(group.Value.ToString())
                            </td>
                        </tr>

                    }
                }
            </tbody>
        </table>
    </div>
</div>