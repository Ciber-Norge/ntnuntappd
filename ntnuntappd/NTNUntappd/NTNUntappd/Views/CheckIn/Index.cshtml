    @Html.ActionLink("Check in mer øl", "Index", "Beer")
</div>

<table class="table">
    <tr>
        <th>CheckIns</th>
        <th>Antall</th>
    </tr>
    
@if (Model.Count() > 0)
{
    var groups = Model.GroupBy(checkIn => checkIn.Beer.Name, checkIn => checkIn.Id);

    foreach (var group in groups)
    {

        var beer = group.Key;
        <tr>
            <td>
                @Html.DisplayFor(g => group.Key)
            </td>
            <td>
                @Html.DisplayName("" + group.Count())
            </td>
            <td>
            </td>
        </tr>
        
    }
}



